<div data-controller="review">
  <div class="d-flex justify-content-between">
    <div>
      <h1>This is a wearable</h1>
      <h3> title: <%= @wearable.title %> </h3>
      <h5> description: <%= @wearable.description %> </h5>
      <h5> size: <%= @wearable.size %> </h5>
      <h5> brand: <%= @wearable.brand %> </h5>
      <h5> category: <%= @wearable.category %> </h5>
      <h5> price: â‚¬<%= @wearable.price %> </h5>

      <div class="d-flex">
        <%= link_to "Book it!", new_wearable_booking_path(@wearable), class: "btn btn-primary m-3"  %>
        <%= link_to "Edit Wearable", edit_wearable_path(@wearable), class: "btn btn-success m-3" if policy(@wearable).edit? %>
        <%= link_to "Delete", wearable_path(@wearable), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger m-3" if policy(@wearable).edit? %>
      </div>
    </div>
    <%= render 'carousel' %>
  </div>

  <div id="review_container" data-review-target="box" class="active" data-action="click->review#toggle">
    Active

  </div>
</div>
