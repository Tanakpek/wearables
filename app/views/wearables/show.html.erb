<div data-controller="review" class='container my-5'>
  <div class="d-flex justify-content-between">
    <div>
      <h1> <strong><%= @wearable.title %> </strong></h3>
      <h5> <%= @wearable.description %> </h5>
      <div class="d-flex"><h5 class="text-muted"> size: </h5><h5 class="mx-2"><%= @wearable.size %> </h5> </div>
      <div class="d-flex"><h5 class="text-muted"> brand: </h5><h5 class="mx-2"><%= @wearable.brand %> </h5></div>
      <div class="d-flex"><h5 class="text-muted"> category: </h5><h5 class="mx-2"><%= @wearable.category %> </h5></div>
      <div class="d-flex"><h5 class="text-muted"> price: </h5><h5 class="mx-2">â‚¬<%= @wearable.price %> </h5></div>

      <div class="d-flex">
        <%= link_to "Book it!", new_wearable_booking_path(@wearable), class: "btn btn-primary m-3 mx-0"  %>
        <%= link_to "Edit Wearable", edit_wearable_path(@wearable), class: "m-3 d-flex align-items-center" if policy(@wearable).edit? %>
        <%= link_to "Delete", wearable_path(@wearable), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: " d-flex align-items-center text-decoration-underline link-danger m-3" if policy(@wearable).edit? %>
      </div>
    </div>
    <%= render 'carousel' %>
  </div>
  <br><br><br>
  <div id="review_container" data-review-target="box" class="active my-5" data-action="click->review#toggle">
  <h3><strong>Reviews</strong></h3>
    <% @reviews.each do |b| %>
    <div class="my-3">
      <h5 class="">- <%= b.content %></h1>
      <span>
        <% (0...(b.rating)).each do %>
          <i class="fa fa-star" aria-hidden="true"></i>
        <% end %>
      </span>
      </div>

    <% end %>
  </div>
</div>
