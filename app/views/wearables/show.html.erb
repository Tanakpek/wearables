<h1>This is a wearable</h1>

<h3> title: <%= @wearable.title %> </h3>
<h5> description: <%= @wearable.description %> </h5>
<h5> size: <%= @wearable.size %> </h5>
<h5> brand: <%= @wearable.brand %> </h5>
<h5> category: <%= @wearable.category %> </h5>
<h5> price: â‚¬<%= @wearable.price %> </h5>

<%= cl_image_tag @wearable.photos[0].key, height: 300, width: 400, crop: :fill %>

<div class="d-flex">
  <%= link_to "Get it", new_wearable_booking_path(@wearable), class: "btn btn-primary m-3"  %>
  <%= link_to "Edit Wearable", edit_wearable_path(@wearable), class: "btn btn-success m-3" if policy(@wearable).edit? %>
