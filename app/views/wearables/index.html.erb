          <div class="ps-3 card-details">
            <div>
              <h5 class= "pe-3 pt-3"> <strong> <%= w.title %> </strong></h5>
              <h4> category: <%= w.category %></h4>
              <h4> brand: <%= w.brand %></h4>
            </div>
            <h4 class="pb-3"> <strong> â‚¬<%= w.price %> </strong></h4>
          </div>
          <%= cl_image_tag w.photos[0].key, height: 200, width: 130, crop: :fill %>
