<div class="mx-auto my-5 p-3">
  <div class="d-flex justify-content-center">
    <div class="text-center w-25 px-3 py-1 border-top border-bottom solid">username</div><div class="border-top border-bottom solid text-center w-25 px-3 py-1"><%= current_user.username %></div>
  </div>
  <div class="d-flex justify-content-center">
    <div class="text-center w-25 px-3 py-1 border-bottom solid">e-mail</div><div class="text-center w-25 px-3 py-1 border-bottom solid"><%= current_user.email %></div>
  </div>
  <div class="d-flex justify-content-center ">
  <div class="text-center w-25 py-1 px-3 border-bottom solid">address</div>
    <% if current_user.address %>
      <div class="text-center w-25 px-3 py-1 border-bottom solid"><%= current_user.address %></div>
    <%else  %>
      <div class="text-center w-25 px-3 py-1 border-bottom solid">-</div>
    <% end %>
  </div>
</div>
