<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6 ">
      <%= simple_form_for([@wearable, @review]) do |r| %>
      <%= r.input :content, as: :string%>
      <%= r.input :rating, as: :select, collection: ['1', '2', '3', '4', '5'] %>
      <%= r.submit%>
      <% end %>
    </div>
  </div>
</div>
