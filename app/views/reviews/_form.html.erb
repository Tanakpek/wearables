  <%= simple_form_for([ wearable, review ],
    data: {insert_in_list_target: "form",
    action: "submit->insert-in-list#send"
    }) do |r| %>
  <%= r.input :content, as: :string%>
  <%= r.input :rating, as: :select, collection: ['1', '2', '3', '4', '5'] %>
  <%= r.button :submit, "Leave review", class: "btn btn-primary"%>
  <% end %>
